
<%- include('header')-%>
    
<div class="text-center center-div" id="login">
<div class="container w-25 bg-white border shadow-lg p-3 mb-5 bg-body rounded ">
    <div class="title">
        <h2 class="font-weight-bold">Login System</h2>
        <span>
            Log in if you have an account
        </span>
        <%if(locals.logout){%>
        <div class="alert alert-success text-center">
            <%= logout%>
        </div>
        
        <%}%>
    </div>
    <form action="/route/login" method="POST">
        <div class="form-group m-3 ">
            <input type="email" class="form-control" placeholder="email"name="email">
            <!-- <small class="form-text text-muted text-left">Register email address</small> -->
        </div>
        <div class="form-group m-3">
            <input type="password" class="form-control" placeholder="password" name="password">
        </div>
        <button type="submit" class="btn btn-success rounded-pill mt- ">Submit </button>
    </form>
</div>

</div>


<%-include('footer')-%>